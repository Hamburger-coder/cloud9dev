<div class="container">
  <h3 class="text-center">Contact Us(aka me but we won't talk about that)</h3>
  
  <%= form_for "/contacts" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <%= f.label :Comments %>
  <%= f.text_area :Comments %>
  
  <%= f.submit 'Submit' %>
  <% end %>
</div>